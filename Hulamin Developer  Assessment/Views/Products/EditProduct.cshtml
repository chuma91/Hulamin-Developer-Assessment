@model Hulamin_Developer__Assessment.Models.Product
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}

@using Hulamin_Developer__Assessment.Helpers;
<link href="~/Content/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/Products/Products.js"></script>

<style>
    .button {
        border-radius: 20px;
    }

    a {
        color: black;
    }
</style>


<div class="main-content">
    
        <div class="section-header">
           
            <div class="section-header-breadcrumb">
              
                
            </div>
        </div>
        <div class="section-body">
            <div class="row">

                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Edit Product</h4>
                            <div class="breadcrumb-item"><a href="@Url.Action("GetAllProducts", "Products")">Category List</a></div>
                        </div>
                        <div class="card-body" style="align-items:center">
                            <section class="section">
                                <div class="container mt-auto">
                                    <div class="row">
                                        <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                                            <div class="card card-primary">
                                                <div class="card-body">
                                                    <span class="help-block">
                                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    </span>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label class="required">Product ID</label>
                                                            @Html.TextBoxFor(m => m.ProductID, new { @class = "form-control", id = "ProductID", placeholder = "Select Product", data_toggle = "modal", data_target = "#myModal", required = "required", @readonly = "readonly" })
                                                            @Html.ValidationMessageFor(m => m.ProductID, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label class="required">Product Name</label>
                                                            @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", id = "ProductName", maxlength = 40, placeholder = "Enter Product Name", required = "required" })
                                                            @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label for="workRequestTitle" class="required">Quantity Per Unit</label><br />
                                                            @Html.TextBoxFor(m => m.QuantityPerUnit, new { @class = "form-control", id = "QuantityPerUnit", maxlength = 20, placeholder = "Enter Quantity Per Unit", required = "required" })
                                                            @Html.ValidationMessageFor(m => m.QuantityPerUnit, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label for="workRequestTitle" class="required">Unit Price</label><br />
                                                            @Html.TextBoxFor(m => m.UnitPrice, new { @class = "form-control", id = "UnitPrice", onkeypress = "return isNumberKeyDecimal(event)", placeholder = "Enter Unit Price", required = "required" })
                                                            @Html.ValidationMessageFor(m => m.UnitPrice, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label for="workRequestTitle" class="required">Unit In Stock</label><br />
                                                            @Html.TextBoxFor(m => m.UnitsInStock, new { @class = "form-control", id = "UnitsInStock", onkeypress = "return isNumberKey(event)", placeholder = "Enter Unit In Stock", required = "required" })
                                                            @Html.ValidationMessageFor(m => m.UnitsInStock, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label for="workRequestTitle" class="required">Units On Order</label><br />
                                                            @Html.TextBoxFor(m => m.UnitsOnOrder, new { @class = "form-control", id = "UnitsOnOrder", onkeypress = "return isNumberKey(event)", placeholder = "Enter Units On Order", required = "required" })
                                                            @Html.ValidationMessageFor(m => m.UnitsOnOrder, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label for="workRequestTitle" class="required">Re order Level</label><br />
                                                            @Html.TextBoxFor(m => m.ReorderLevel, new { @class = "form-control", id = "ReorderLevel", onkeypress = "return isNumberKey(event)", placeholder = "Enter Re order Level", required = "required" })
                                                            @Html.ValidationMessageFor(m => m.ReorderLevel, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label for="workRequestTitle" class="required">Discontinued</label><br />
                                                            True  @Html.RadioButtonFor(m => m.Discontinued, true, new { id = "DiscontinuedTrue" })
                                                            False @Html.RadioButtonFor(m => m.Discontinued, false, new { id = "DiscontinuedFalse" })
                                                        </div>
                                                    </div>

                                                    <div class="row form-group">
                                                        <div class="col-md-4"></div>
                                                        <div class="col-md-5">
                                                            <input type="button" onclick="UpdateProduct('@TempData["ID"]')" id="btnSubmit" class="btn btn-block btn-success" value="Edit" />
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </section>

                        </div>
                    </div>
                </div>
            </div>
        </div>

</div>


