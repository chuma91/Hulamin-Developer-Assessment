@model Hulamin_Developer__Assessment.Models.Supplier
@{
    ViewBag.Title = "AddSupplier";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}

@using Hulamin_Developer__Assessment.Helpers;

<link href="~/Content/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/Suppliers/Suppliers.js"></script>

<style>
    .button {
        border-radius: 20px;
    }

    a {
        color: black;
    }
</style>


<div class="main-content">

    <div class="section-header">

        <div class="section-header-breadcrumb">


        </div>
    </div>
    <div class="section-body">
        <div class="row">

            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Edit Supplier</h4>
                        <div class="breadcrumb-item"><a href="@Url.Action("GetAllSuppliers", "Suppliers")">Supplier List</a></div>
                    </div>
                    <div class="card-body" style="align-items:center">
                        <section class="section">
                            <div class="container mt-auto">
                                <div class="row">
                                    <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                                        <div class="card card-primary">
                                            <div class="card-body">
                                                <span class="help-block">
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                </span>
                                                <div class="row">
                                                    <div class="form-group col-12">
                                                        <label class="required">Company Name</label>
                                                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", id = "CompanyName", maxlength = 40, placeholder = "Enter Company Name", required = "required" })
                                                        @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-12">
                                                        <label for="workRequestTitle" class="required">Contact Name</label><br />
                                                        @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", id = "ContactName", maxlength = 30, placeholder = "Enter Contact Name", required = "required" })
                                                        @Html.ValidationMessageFor(m => m.ContactName, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-12">
                                                        <label for="workRequestTitle" class="required">Contact Title</label><br />
                                                        @Html.TextBoxFor(m => m.ContactTitle, new { @class = "form-control", id = "ContactTitle", maxlength = 30, placeholder = "Enter Unit Price", required = "required" })
                                                        @Html.ValidationMessageFor(m => m.ContactTitle, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-12">
                                                        <label for="workRequestTitle" class="required">Address</label><br />
                                                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", id = "Address", maxlength = 60, placeholder = "Enter Address", required = "required" })
                                                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-12">
                                                        <label for="workRequestTitle" class="required">City</label><br />
                                                        @Html.TextBoxFor(m => m.City, new { @class = "form-control", id = "City", maxlength = 15, placeholder = "Enter City" })
                                                        @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-12">
                                                        <label for="workRequestTitle">Region</label><br />
                                                        @Html.TextBoxFor(m => m.Region, new { @class = "form-control", id = "Region", maxlength = 15, placeholder = "Enter Region" })
                                                        @Html.ValidationMessageFor(m => m.Region, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-12">
                                                        <label for="workRequestTitle">Postal Code</label><br />
                                                        @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", id = "PostalCode", maxlength = 10, placeholder = "Enter Postal Code" })
                                                        @Html.ValidationMessageFor(m => m.PostalCode, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-12">
                                                        <label for="workRequestTitle">Country</label><br />
                                                        @Html.TextBoxFor(m => m.Country, new { @class = "form-control", id = "Country", maxlength = 15, placeholder = "Enter Country" })
                                                        @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-12">
                                                        <label for="workRequestTitle" class="required">Phone</label><br />
                                                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", id = "Phone", maxlength = 10, onkeypress = "return isNumberKey(event)", placeholder = "Enter Phone", required = "required" })
                                                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-12">
                                                        <label for="workRequestTitle">Fax</label><br />
                                                        @Html.TextBoxFor(m => m.Fax, new { @class = "form-control", id = "Fax", maxlength = 10, onkeypress = "return isNumberKey(event)", placeholder = "Enter Fax" })
                                                        @Html.ValidationMessageFor(m => m.Fax, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-12">
                                                        <label for="workRequestTitle">HomePage</label><br />
                                                        @Html.TextBoxFor(m => m.HomePage, new { @class = "form-control", id = "HomePage", placeholder = "Enter Home Page" })
                                                        @Html.ValidationMessageFor(m => m.HomePage, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col-md-4"></div>
                                                    <div class="col-md-5">
                                                        <input type="button" onclick="AddSupplier()" id="btnSubmit" class="btn btn-block btn-success" value="Add" />
                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </section>

                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>
</div>